@import "@Assets/global_style"

:local(.UserLogin)
    display flex
    width 100%
    .user_login
        margin-top 20px
        width 100%
        justify-content center
        &__content
            margin 0 auto
            max-width 1000px
            display flex
            justify-content space-between
            align-items center
            padding 0 30px
            &__logo
                height 65px
                width 65px
                margin-bottom 30px
            &__right_icon
                max-height 100%
            &__form
                width 100%
                max-width 430px
                margin 30px 0
                &__header
                    font-weight 600
                    margin-bottom 15px
                &__checkpoint
                    &__checkbox
                        position relative
                        border 1px solid $super_light_grey
                        padding 18px 24px 18px 49px
                        border-radius 4px
                        margin-bottom 15px
                        height 110px
                        cursor pointer
                        input[type="checkbox"]
                            position absolute
                            left 15px
                            height 17px
                            width 17px
                            top 21px
                        .title
                            font-size 19px
                            font-weight 600
                            color $pale_black
                            margin-bottom 5px
                        p 
                            color rgba(68, 68, 68, 0.8)
                            font-size 14px
                            line-height 20px
                        &.selected
                            border 1px solid $primary_dark
                            background $primary_light
                    .input_group
                        margin-bottom 30px
                        margin-top 30px
                        label
                            font-weight 500
                        input[type="text"], input[type="email"]
                            margin-top 13px
                            height 52px
                            width 100%
                            border 1px solid $menu_grey
                            border-radius 4px
                            padding 5px 10px
                            font-size 16px
                &__terms
                    margin-top 15px
                    font-size 11px
                    font-weight 400
                    color $pale_black
                    a
                        color $primary_normal
                &__new
                    div[role="button"]
                        margin-top 15px
                        color $primary_normal
                        border-radius 4px

                &__divider
                    border none
                    border-top 3px double rgba(68, 68, 68, 0.7)
                    color #333
                    overflow visible
                    text-align center
                    height 5px
                    margin 30px 0 
                hr:after 
                    background #fff
                    content 'New to Jollibase?'
                    padding 0 15px
                    position relative
                    top -13px
                    color rgba(68, 68, 68, 0.7)
                    font-size 15px
                .small
                    color $pale_black
                    margin-top 30px
                    font-size 12px
                    text-align center


            form div[role="button"]
                border-radius 4px


:local(.VerfiedEmailLogIn)
    .verified_email
        &__alias
            font-weight 500
        &__input_group
            margin 30px 0
            label 
                font-weight 500
                display flex
                justify-content space-between
                span:nth-of-type(2)
                    color $primary_normal
                    font-size 13px
                    font-weight 400
            input[type="text"], input[type="password"]
                margin-top 13px
                height 52px
                width 100%
                border 1px solid $menu_grey
                border-radius 4px
                font-size 16px
                padding 5px 10px
            div[role="button"]
                border-radius 4px
                margin-top 30px
        &__sign_another
            margin-top -20px
            margin-bottom 35px
            font-size 14px
            a
                color $primary_normal
