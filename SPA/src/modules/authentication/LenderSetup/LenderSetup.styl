@import "@Assets/global_style"

:local(.LenderSetup)
  width 100%
  display flex
  flex-direction column
  overflow-y auto
  height 100vh
  .lender-setup__logo
    width 100%
    text-align center
    height 60px
    padding 15px 0
    svg
      height 100%
  
  form
     width 100%
     .half, .third
        display flex
        justify-content space-between
        > div 
          flex-basis 48%
      .third
        > div 
          flex-basis 31%
     .input__group
        margin-bottom 12px
        width 100%
        position relative

        &__container
          border 1px solid $ash
          border-radius 10px
          padding-top 10px
        
        label
          font-size 12px
          position absolute
          padding-left 20px
          color $special_grey
        input, select
          width 100%
          padding-bottom 10px
          border none
          font-size 15px
        input
          color $color_black

    .form__password__info
      font-weight 400
      font-size 13px
      color $light_grey
      line-height 17px
      span 
        color #2B2F32
    .form__btn
      min-width 100px
      margin-top 36px
      float right
      clear both
      border-radius 8px
      padding 7px 18px
      height 30px
      transition 0.4s
      p 
        display flex
        align-items center
        font-size 15px
