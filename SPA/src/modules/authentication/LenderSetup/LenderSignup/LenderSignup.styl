@import "@Assets/global_style"

:local(.LenderSignup)
  display flex
  padding 40px 30px 90px
  max-width 600px
  min-width 300px
  flex-direction column
  justify-content center
  align-items center
  .lender-signup__title
    margin-bottom 30px
    text-align center
    h4
      color $pale_black
      font-weight 600
      font-family 'Roboto', sans-serif
    p
      font-size 15px
      line-height 20px
      max-width 450px
      font-weight 300
      margin-top 4px
      color rgba(23, 23, 23, 0.6)
  .lender-signup__login
    margin-top 25px
    font-weight 400
    color #5E6366
    font-size 14px
    a
      color $primary_normal
