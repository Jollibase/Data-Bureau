@import "@Assets/global_style"

:local(.ErrorPage)
  background $sec_light
  overflow-y hidden
  height 100vh
  width 100%
  padding 49px 30px 49px 80px
  position relative
  .error__menu
    .menu__list
      li a
        color $menu_grey 
  .error
    display flex
    padding 0 30px
    &__dot
      position absolute
      right 0
    &__text
      min-width 400px
      padding-top 80px
      display flex
      flex-basis 60%
      justify-content flex-start
      flex-direction column
      margin-bottom 100px
      align-items center
      h2
        color $bloody_red
        font-style normal
        font-weight 700
        rfs-font-size(50px)
        rfs(70px, line-height)
        text-align center
        margin-bottom 60px

      &__btns
        display flex
        
        .btn_inverse
          border 1px solid $carnelian_red
          color $carnelian_red
          margin-right 25px
          &:hover
            color $color_white
            background $carnelian_red

        .btn_previous
          border 1px solid $carnelian_red
          background $carnelian_red
          color $color_white
          &:hover
            background #9d3939
            .btn_text
              transition 0.5s ease
              svg
                transition 0.5s ease
                margin-right 15px
          .btn_text
            display flex
            align-items center
            font-size 16px
            svg 
              margin-right 10px
              font-size 10px
    &__image
      max-width 100%
      flex-basis 40%
      svg
        height 100%
        width 100%
        display block
  @media screen and (max-width: 899px)
    padding-right 30px
    padding-left 30px
    .error
      padding 0 10px
  @media screen and (max-width: 670px)
    margin-bottom 50px
    overflow-y auto
    padding-right 16px
    padding-left 16px
    .error
      padding 0
      flex-direction column
      &__image
        height 300px
        display flex
        align-items center
        justify-items center
        flex-basis 0
      &__text
        order 2
        padding-top 10px
        > h2
          margin-bottom 30px
        &__btns 
          > div, .btn_previous .btn_text
            font-size 13px
            font-weight 600
          

  @media screen and (max-width: 600px)
    padding-top 30px
    .error
      &__text
        min-width 0
        &__btns
          justify-content center
          flex-wrap wrap
          > div
            margin 10px 0
   @media screen and (max-width: 400px)
      .error
        &__text
          &__btns
            .btn_inverse
              margin-right 0
