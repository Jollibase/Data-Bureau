@import "@Assets/global_style"

:local(.Menu)
  display flex
  justify-content space-between
  align-items center
  margin-bottom 30px
  z-index 99999
  position relative

  .menu
    &__logo
      flex-basis 23%
    &__hamburger
      color $color_white
      font-size 60px
      cursor pointer
    &__mobile_list
      display none
      height 400px
      position absolute
      background $primary_darker
      width 300px
      top 74px
      right 0
      box-shadow 15.95031px 10.63354px 31.90062px 0px rgba(84, 84, 84, 0.28), -21.26708px -10.63354px 79.75155px 0px rgba(134, 132, 132, 0.1);
      padding 22px 0 
      border-radius 5px
      &.active
        display flex
      ul 
        width 100%
        text-align center
        li
            padding 22px 0 
          a
            color rgba(255, 255, 255, 0.80)
            padding 22px 0 
            border-bottom 2px solid rgba(255, 255, 255, 0.60)
            font-size 14px
            &:hover
              border-bottom 2px solid $sec_normal_active
              color $sec_normal_active



    &__list
      display flex
      align-items center
      justify-content space-between
      width 100%
      flex-basis 77%
      ul
        display flex
        .list-item
          cursor pointer
          padding 10px
          margin 5px
          &.active
            > a
              color $sec_normal_active
          > a
            color $color_white
            &:hover
              padding-bottom 7px
              border-bottom 2px solid $sec_normal_active
              color $sec_normal_active

  @media screen and (max-width: 760px)
    .menu__list.desktop_view
        display none !important
    .mobile_view
        display flex !important
      
  
  @media screen and (max-width: 600px)
    .menu__logo
      height 55px
