@import "@Assets/global_style"

:local(.Button)
    padding 15px
    display flex
    align-items center
    justify-content center
    text-align center
    border-radius 7px
    background $primary_normal
    font-size 16px
    color $color_white
    transition 0.3s ease-in
    cursor pointer
    &.disabled, &.disabled:hover
        cursor not-allowed !important
        background #cccccc !important
        border none !important
        color $color_white !important
    &.inverse
        background transparent

    @media screen and (max-width: 1000px) {
        padding 12px
    }
    svg
        width 23px
        height 23px
        padding-left 7px
        margin-left 7px

:local(.Primary)
    &:hover 
        background $primary_normal_hover
        cursor pointer
    &.inverse
        border 1px solid $primary_normal_hover
    
    &:active
        background $primary_normal_active

:local(.Secondary)
    background $sec_normal
    &.inverse
        color $sec_normal
        border 1px solid $sec_normal_hover

    &:hover 
        background $sec_normal_hover
        cursor pointer
        color $color_white
    
    &:active
        background $sec_normal_active


:local(.ExportButton)
    background transparent
    svg
        padding-left 0px
        margin-left 0px
    &.disabled
        background transparent
        border none
        &:hover
            background transparent
            border none
        svg 
            fill #ccc
