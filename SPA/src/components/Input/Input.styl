@import "@Assets/global_style"

:local(.Input)
    padding 20px
    width 100%
    border 1px solid $color_white 
    background rgba(255, 255, 255, 0.15)
    border-radius 10px
    color white
    font-size 16px
    box-sizing border-box
    &::placeholder 
        color $light_grey
        font-weight 300
        font-size 14px
    &:focus
        outline none
